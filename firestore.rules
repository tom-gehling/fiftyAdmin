rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Admins collection - only admins can read/write
    match /admins/{adminId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (request.auth.uid == userId || isAdmin());

      // User subcollections (followers/following)
      match /{subcollection}/{docId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Quizzes collection
    match /quizzes/{quizId} {
      allow read: if true;  // Public read for quizzes
      allow write: if isAdmin();
    }

    // Quiz Results collection
    match /quizResults/{resultId} {
      allow read: if isAuthenticated();
      allow create: if true;  // Anyone can submit results
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Quiz Tags collection
    match /quizTags/{tagId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Quiz Aggregates collection
    match /quizAggregates/{quizId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ========================================
    // NEW: Submission Forms (admin only)
    // ========================================
    match /submissionForms/{formId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ========================================
    // NEW: Quiz Submissions (users can create)
    // ========================================
    match /quizSubmissions/{submissionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // ========================================
    // NEW: User Submission Stats
    // ========================================
    match /userSubmissionStats/{uid} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}
